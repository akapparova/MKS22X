public class QueenBoard{
    private int[][] board;
    private int solutionCount;

    public QueenBoard (int size){
	board = new int[size][size];
	for (int row = 0; row < size - 1; row ++){
	    for (int col = 0; col < board[0].length - 1; col ++){
		board[row][col] = 0;
	    }
	}		
    }

